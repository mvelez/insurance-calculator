{
  "extends": ["eslint:recommended", "airbnb"],
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "no-var": "off",
    "no-underscore-dangle": "off",
    "func-names": "off",
    "prefer-arrow-callback": "off",
    "object-shorthand": "off",
    "prefer-template": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }]
  },
  "globals": {
    "Polymer": true
  }
}
